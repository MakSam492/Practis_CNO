<Page x:Class="CNO.Pages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CNO.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Авторизация" Background="#F5F5F5">
    <Grid>
        <!-- Центрируем контент по вертикали и горизонтали -->
        <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Заголовок -->
            <TextBlock Text="Авторизация" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,20"/>

            <!-- Название поля для ввода логина -->
            <TextBlock Text="Логин" 
                       Grid.Row="1" 
                       FontSize="14" 
                       Margin="0,0,0,5"/>

            <!-- Поле для ввода логина -->
            <TextBox x:Name="LoginBox" 
                     Grid.Row="2" 
                     Width="300" 
                     Padding="10" 
                     Margin="0,0,0,10" 
                     FontSize="14" 
                     Background="White" 
                     BorderThickness="0"/>

            <!-- Название поля для ввода пароля -->
            <TextBlock Text="Пароль" 
                       Grid.Row="3" 
                       FontSize="14" 
                       Margin="0,0,0,5"/>

            <!-- Поле для ввода пароля -->
            <PasswordBox x:Name="PasswordBox" 
                         Grid.Row="4" 
                         Width="300" 
                         Padding="10" 
                         Margin="0,0,0,20" 
                         FontSize="14" 
                         Background="White" 
                         BorderThickness="0"/>

            <!-- Кнопка входа -->
            <Button Content="Войти" 
                    Grid.Row="5" 
                    Width="300" 
                    Padding="10" 
                    Background="#4CAF50" 
                    Foreground="White" 
                    FontSize="14" 
                    BorderThickness="0" 
                    Cursor="Hand" 
                    Click="LoginButton_Click"
                    Margin="0,0,0,10"/>

            <!-- Кнопка регистрации -->
            <Button Content="Зарегистрироваться" 
                    Grid.Row="6" 
                    Width="300" 
                    Padding="10" 
                    Background="#2196F3" 
                    Foreground="White" 
                    FontSize="14" 
                    BorderThickness="0" 
                    Cursor="Hand" 
                    Click="RegisterButton_Click"
                    Margin="0,0,0,20"/>

            <!-- Ссылка на восстановление пароля -->
            <TextBlock Grid.Row="7" 
                       Text="Забыли пароль?" 
                       FontSize="12" 
                       Foreground="#2196F3" 
                       HorizontalAlignment="Center" 
                       Margin="0,10,0,0" 
                       Cursor="Hand" 
                       MouseLeftButtonDown="ForgotPassword_MouseLeftButtonDown"/>
        </Grid>
    </Grid>
</Page>
